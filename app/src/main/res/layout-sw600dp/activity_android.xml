<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--set static untuk master list-->
    <fragment
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:id="@+id/master_list_fragment"
        android:name="com.imastudio.materildesignapp.fragment.MasterListFragment"
        ></fragment>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"></View>
    <LinearLayout
        android:id="@+id/android_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/kepala_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

        </FrameLayout>
        <FrameLayout
            android:id="@+id/badan_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

        </FrameLayout>
        <FrameLayout
            android:id="@+id/kaki_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            >

        </FrameLayout>

    </LinearLayout>

</LinearLayout>